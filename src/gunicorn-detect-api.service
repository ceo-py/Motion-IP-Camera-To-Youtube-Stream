[Unit]
Description=Gunicorn instance for ip-camera
After=network.target

[Service]
User=user
Group=www-data
WorkingDirectory=/home/user/production/ip-camera
# Activate venv and start Gunicorn
ExecStart=/bin/bash -c 'source /home/user/production/ip-camera/venv/bin/activate && exec gunicorn --workers 1 --bind 127.0.0.1:8001 api:app'
Restart=always

[Install]
WantedBy=multi-user.target